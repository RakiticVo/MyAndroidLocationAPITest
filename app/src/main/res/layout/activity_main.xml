<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Providers: "
        android:textSize="22sp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Get Current Location by GPS Povider"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/getdata1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Get Current Location by Network Provider"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/getdata2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Get Current Location by Passive Provider"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/getdata3"/>

</LinearLayout>